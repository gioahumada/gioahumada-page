  .app__photos {
    height: calc(100vh - 80px);
    margin: 40px 0;
  }

  .photo {
    height: calc(100vh - 80px);
  }
}
</style>

<script>
// Funci√≥n para compartir
function shareContent(title, text, url) {
  if (navigator.share) {
    navigator.share({
      title: title,
      text: text,
      url: url
    })
    .catch((error) => console.log('Error sharing:', error));
  } else {
    // Fallback: Copiar al portapapeles
    const dummy = document.createElement('input');
    document.body.appendChild(dummy);
    dummy.value = url;
    dummy.select();
    document.execCommand('copy');
    document.body.removeChild(dummy);
    alert('¬°Enlace copiado al portapapeles!');
  }
}

// Agregar event listeners a los botones de compartir
document.querySelectorAll('.share-button').forEach((button) => {
  button.addEventListener('click', (e) => {
    e.preventDefault();
    const photo = button.closest('.photo');
    const title = photo.querySelector('h3').textContent;
    const description = photo.querySelector('.photoFooter__description').textContent;
    const link = photo.querySelector('a').href;
    
    shareContent(title, description, link);
  });
});
</script>

