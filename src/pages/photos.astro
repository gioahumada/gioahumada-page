  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  backdrop-filter: blur(4px);
  transition: transform 0.3s ease;
}

.share-button:hover {
  transform: scale(1.1);
}

.share-button .material-symbols-outlined {
  color: white;
  font-size: var(--text-lg);
}

/* M√°rgenes solo en desktop */
