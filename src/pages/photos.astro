<style>
/* Bot√≥n de regreso */
.back-button {
  position: fixed;
  top: 20px;
  left: 20px;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-decoration: none;
  backdrop-filter: blur(5px);
  transition: transform 0.3s ease;
}

.back-button:hover {
  transform: scale(1.1);
}

.back-button .material-symbols-outlined {
  font-size: var(--text-lg);
}

.app__photos {
  position: relative;
  width: 100%;
  max-width: 400px;
  height: 100vh;
  overflow-y: scroll;
  overflow-x: hidden;
  scroll-snap-type: y mandatory;
  background-color: white;
  border-radius: 20px;
  -ms-overflow-style: none;  /* IE y Edge */
  scrollbar-width: none;  /* Firefox */
}

/* Ocultar scrollbar para Chrome, Safari y Opera */
.app__photos::-webkit-scrollbar {
  display: none;
}

.photo {
  position: relative;
  width: 100%;
  height: 100vh;
  scroll-snap-align: start;
  overflow: hidden;
}

.photo__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(
    to bottom,
    transparent,
    rgba(0, 0, 0, 0.2) 20%,
    rgba(0, 0, 0, 0.7) 60%,
    rgba(0, 0, 0, 0.8) 100%
  );
  pointer-events: none;
}

.photoSidebar {
  position: absolute;
  top: 45%;
  right: 10px;
  z-index: 2;
}

.photoSidebar .material-symbols-outlined {
  font-size: var(--text-lg);
  cursor: pointer;
}

.photoSidebar_button {
  padding: 0.5rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.25rem;
}

.photoSidebar_button p {
  font-size: var(--text-xs);
}

.photoFooter {
  position: absolute;
  bottom: 2rem;
  left: 0;
  right: 0;
  padding: 0 1rem;
  color: white;
  z-index: 2;
}

.photoFooter__text {
  max-width: 100%;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.photoFooter__text h3 {
  font-size: var(--text-lg);
  font-weight: 500;
  margin-bottom: 0.5rem;
  white-space: normal;
  line-height: 1.2;
}

.photoFooter__description {
  font-size: var(--text-sm);
  margin-bottom: 0.75rem;
  white-space: normal;
  line-height: 1.4;
  opacity: 0.8;
}

.photoFooter__ticker {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: var(--text-sm);
}

.photoFooter__icon {
  font-size: var(--text-base);
  color: white;
}

.photoFooter__ticker marquee {
  flex: 1;
  opacity: 0.9;
}

@media (max-width: 425px) {
  .app__photos {
    width: 100%;
    height: 100%;
    max-width: 100%;
    border-radius: 0;
  }

  .photoFooter {
