---

<CleanLayout title="Fotograf铆as">
  <a href="/" class="back-button">
    <span class="material-symbols-outlined">arrow_back</span>
  </a>

  <div class="app__photos">
    {photos.map(photo => (
      <div class="photo">
        <a href={photo.link} target="_blank">
          <img src={photo.image} class="photo__image" alt={photo.title} />
        </a>

        <div class="photoSidebar">
          <button class="share-button" aria-label="Compartir">
            <span class="material-symbols-outlined">ios_share</span>
          </button>
        </div>

        <div class="photoFooter">
          <div class="photoFooter__text">
            <h3>{photo.title}</h3>
            <p class="photoFooter__description">{photo.date}</p>
            <div class="photoFooter__ticker">
              <span class="material-symbols-outlined photoFooter__icon">location_on</span>
              <marquee>{photo.location}</marquee>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</CleanLayout>

<style>
/* Bot贸n de regreso */
.back-button {
  position: fixed;
  top: 20px;
  left: 20px;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-decoration: none;
  backdrop-filter: blur(5px);
  transition: transform 0.3s ease;
}

.back-button:hover {
  transform: scale(1.1);
}

.back-button .material-symbols-outlined {
  font-size: var(--text-lg);
}

.app__photos {
  position: relative;
  width: 100%;
  max-width: 400px;
  height: 100vh;
  height: 100dvh;
  overflow-y: scroll;
  overflow-x: hidden;
  scroll-snap-type: y mandatory;
  background-color: black;
  -ms-overflow-style: none;
  scrollbar-width: none;
  border-radius: 20px;
}

.app__photos::-webkit-scrollbar {
  display: none;
}

.photo {
  position: relative;
  width: 100%;
  height: 100vh;
  height: 100dvh;
  scroll-snap-align: start;
  overflow: hidden;
}

.photo__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70%;
  background: linear-gradient(
    to bottom,
    transparent,
    rgba(0, 0, 0, 0.5) 30%,
    rgba(0, 0, 0, 0.8) 100%
  );
  pointer-events: none;
}

.photoSidebar {
  position: absolute;
  top: 45%;
  right: 10px;
  z-index: 2;
}

.photoSidebar .material-symbols-outlined {
  font-size: var(--text-lg);
  cursor: pointer;
}

.photoSidebar_button {
  padding: 0.5rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.25rem;
}

.photoSidebar_button p {
  font-size: var(--text-xs);
}

.photoFooter {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 2rem 1.5rem;
  z-index: 2;
}

.photoFooter__text {
  max-width: 100%;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.photoFooter__text h3 {
  font-size: var(--text-lg);
  font-weight: 600;
  margin-bottom: 0.75rem;
  white-space: normal;
  line-height: 1.3;
}

.photoFooter__description {
  font-size: var(--text-sm);
  margin-bottom: 0.75rem;
  white-space: normal;
  line-height: 1.4;
  opacity: 0.9;
}

.photoFooter__ticker {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: var(--text-sm);
  margin-top: 0.5rem;
}

.photoFooter__icon {
  font-size: var(--text-base);
  color: white;
}

.photoFooter__ticker marquee {
  flex: 1;
  opacity: 0.9;
}

@media (max-width: 768px) {
  .app__photos {
    max-width: 100%;
    border-radius: 0;
  }

  .photo {
    height: calc(100vh - env(safe-area-inset-bottom, 0px));
    height: calc(100dvh - env(safe-area-inset-bottom, 0px));
  }

  .photoFooter {
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(0, 0, 0, 0.7) 30%,
      rgba(0, 0, 0, 0.9) 100%
    );
    padding-bottom: calc(4rem + env(safe-area-inset-bottom, 20px));
  }

  .photoFooter__text {
    padding-bottom: env(safe-area-inset-bottom, 20px);
  }

  .photoFooter__text h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .photoFooter__description {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .photoFooter__ticker {
    font-size: 0.9rem;
    margin-bottom: calc(env(safe-area-inset-bottom, 20px) + 1rem);
  }

  .photo::after {
    height: 75%;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(0, 0, 0, 0.6) 30%,
      rgba(0, 0, 0, 0.9) 100%
    );
  }
}

/* Ajustes espec铆ficos para iPhone con notch y barra de navegaci贸n */
@supports (padding: env(safe-area-inset-bottom)) {
  .photo {
    height: calc(100vh - env(safe-area-inset-bottom) - env(safe-area-inset-top));
    height: calc(100dvh - env(safe-area-inset-bottom) - env(safe-area-inset-top));
  }

  .photoFooter {
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(0, 0, 0, 0.7) 30%,
      rgba(0, 0, 0, 0.95) 70%,
      rgba(0, 0, 0, 1) 100%
    );
    padding-bottom: calc(5rem + env(safe-area-inset-bottom));
  }

  .photoFooter__text {
    padding-bottom: env(safe-area-inset-bottom);
  }

  .photoFooter__ticker {
    margin-bottom: calc(env(safe-area-inset-bottom) + 1rem);
  }
}

/* Ajuste para pantallas muy altas */
@media (min-height: 800px) {
  .photoFooter {
    padding-bottom: calc(6rem + env(safe-area-inset-bottom));
  }
}

/* Nuevo estilo para el bot贸n de compartir */
.share-button {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  backdrop-filter: blur(4px);
  transition: transform 0.3s ease;
}

.share-button:hover {
  transform: scale(1.1);
}

.share-button .material-symbols-outlined {
  color: white;
  font-size: var(--text-lg);
}

/* M谩rgenes solo en desktop */
@media (min-width: 769px) {
  .app__photos {
    height: calc(100vh - 80px);
    margin: 40px 0;
  }

  .photo {
    height: calc(100vh - 80px);
  }

  .photoFooter {
    padding: 2rem;
  }
}
</style>

<script>
// Funci贸n para compartir
function shareContent(title, text, url) {
  if (navigator.share) {
    navigator.share({
      title: title,
      text: text,
      url: url
    })
    .catch((error) => console.log('Error sharing:', error));
  } else {
    // Fallback: Copiar al portapapeles
    const dummy = document.createElement('input');
    document.body.appendChild(dummy);
    dummy.value = url;
    dummy.select();
    document.execCommand('copy');
    document.body.removeChild(dummy);
    alert('隆Enlace copiado al portapapeles!');
  }
}

// Agregar event listeners a los botones de compartir
document.querySelectorAll('.share-button').forEach((button) => {
  button.addEventListener('click', (e) => {
    e.preventDefault();
    const photo = button.closest('.photo');
    const title = photo.querySelector('h3').textContent;
    const description = photo.querySelector('.photoFooter__description').textContent;
    const link = photo.querySelector('a').href;
    
    shareContent(title, description, link);
  });
});
</script>

<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

<!-- Agregar meta viewport con soporte para notch -->
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, interactive-widget=resizes-content">
</head>